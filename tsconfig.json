{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,

    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,

    "baseUrl": "./"
  },
  "exclude": ["node_modules", "build"]
}
